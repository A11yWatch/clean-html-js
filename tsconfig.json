{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "lib": ["dom", "es2019"],
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist/",
    "declaration": true,
    "declarationDir": "./types",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
